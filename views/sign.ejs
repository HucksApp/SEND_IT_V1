<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta http-equiv="content-type" content="text/html"; charset="utf-8">
    <meta name='viewport' content="width=device-width, initial-scale=1">
    <title><img src="">signup/signin</title>
    <link href="sign.css" rel="stylesheet" type="text/css"/>
  </head>
  <body>
    <!--inject nav-->
    <% include partials/logout%>
    <p>Hucksapp</p>
    <section>
      <div id="signup">
        <form action="/newuser"  name="signup" method="post" >
          <div class="name">
            <label for="name" >Name</label>
            <input id="name" name="username" type="text" class="name" required="required" placeholder="Enter your name"/>
          </div>
          <div >
            <label for="password" >password</label>
            <input id="password" name="password" type="password" class="password" required="required" placeholder="enter alphanumeric of at least 7 Characters" minlength="7"  maxlength="15"/>
          </div>
          <div class="name">
            <label for="phone_number" >Phoneno</label>
            <input id="phone_number" name="phoneno" type="number" class="phone_number" placeholder="Enter your telephone number"/>
          </div>
          <div>
            <label for="address" >Address</label>
            <textarea id="address" name="address" rows="3" cols="40">Enter your address</textarea>
          </div>
          <div >
            <label for="email" >Email</label>
            <input id="email" name="email" type="email" class="email" required="required" placeholder="enter your email"/>
          </div>
          <div >
            <label for="checkbox" >you agree to comply with the site policy</label>
            <input id="checkbox" type="checkbox" class="" required="required" placeholder="enter your email"/>
          </div>
          <div>
            <button for="submit" style="background-color:#f00; color:#fff; font-weight:bolder">submit</button>
          </div>
        <a  href="/google"><img class="icons_r"src="icons/icons8-google-plus-50.png"></a>
        </form>

      </div>
      <div id="signin">
        <fieldset>
            <p style="color:red;"><%=data%><p>
          <legend>Already a User</legend>
        <form method="post" action="/olduser" id="signin-form" name="signin-form" >
          <div >
            <label for="email2" >email</label>
            <input id="email2" name="email2"  type="email" class="email" required="required" placeholder="enter your email"/>
          </div>
          <div >
            <label for="password2" >password</label>
            <input id="password2" name="password2" type="password" class="password" required="required" />
          </div>
          <div >
            <button  type="submit"><img  id="usersubmit"src="icons/icons8-checkmark-50.png" /></button>
          </div>
        </form>
        </fieldset>
          <a  href="/google"><img class="icons_r" src="icons/icons8-google-plus-50.png"></a>
          <img class="icons_r admin"src=" icons/icons8-administrative-tools-40.png"/>

        <div id="adminForm"></div>
      </div>
    </section>
    <%include partials/socials%>
      <script  src="https://code.jquery.com/jquery-3.4.1.js" type="text/javascript">
      </script>
      <script  src="fronthandeler/sign.js" type="text/javascript">
      </script>
  </body>
</html>
